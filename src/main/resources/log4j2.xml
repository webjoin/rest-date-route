<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout charset="UTF-8" pattern="%d{ABSOLUTE}  %5p : %m%n"/>
            <!--<ThresholdFilter level="error" onMatch="DENY" onMismatch="ACCEPT"/>-->
        </Console>

        <RollingRandomAccessFile name="SERVICE_LOG_FILE" immediateFlush="false" fileName="logs/mt/wm-${sys:area}.log"
                                 filePattern="logs/mt/$${date:yyyyMM}/wm-${sys:area}-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout charset="UTF-8"
                           pattern="%m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="100 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="200"/>
        </RollingRandomAccessFile>
        <RollingRandomAccessFile name="OTHER_LOG_FILE" immediateFlush="false" fileName="logs/other/other-${sys:area}.log"
                                 filePattern="logs/other/$${date:yyyyMM}/other-${sys:area}-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout charset="UTF-8" pattern="%m%n"/>
            <!--<ThresholdFilter level="warn" onMatch="ACCEPT" onMismatch="DENY"/>-->
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="20 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="40"/>
        </RollingRandomAccessFile>
    </Appenders>

    <Loggers>
        <!-- Root Logger -->
        <Root level="INFO">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="OTHER_LOG_FILE"/>
        </Root>
        <!-- service provider Logger -->
        <!--<Logger name="com.viewt.rest.data.storage" level="INFO" additivity="false">-->
            <!--<AppenderRef ref="STDOUT"/>-->
            <!--<AppenderRef ref="SERVICE_LOG_FILE"/>-->
        <!--</Logger>-->

        <Logger name="com.viewt.rest.WaimaiBootstrap" level="INFO" additivity="false">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="SERVICE_LOG_FILE"/>
        </Logger>

    </Loggers>
</Configuration>